{
  "manifest_version": 2,
  "name": "SIGA+ New Tab",
  "short_name": "SIGA+",
  "version": "1.0.0",
  "description": "A New Tab page.",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "SIGA+ New Tab"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "content_security_policy": "script-src 'self' https://www.google.com https://api.bing.com; object-src 'self'",
  "permissions": ["storage"]
}
